<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLogoGameFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/logo_to_be_guessed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/selectGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_to_be_guessed"
        app:rowCount="3">

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="0"
            app:layout_row="0">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="1"
            app:layout_row="0">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="2"
            app:layout_row="0">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="0"
            app:layout_row="1">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="1"
            app:layout_row="1">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="2"
            app:layout_row="1">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="0"
            app:layout_row="2">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="1"
            app:layout_row="2">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relativeLayoutWidth"
            android:layout_height="@dimen/relativeLayoutHeight"
            android:layout_margin="@dimen/inGridMargins"
            app:layout_column="2"
            app:layout_row="2">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="@dimen/imageButtonWidth"
                android:layout_height="@dimen/imageButtonHeight"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/inGridMargins"
                android:layout_marginTop="@dimen/inGridMargins"
                android:layout_marginEnd="@dimen/inGridMargins"
                android:layout_marginBottom="@dimen/inGridMargins"
                android:background="@color/white"

                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"

                />
        </RelativeLayout>

    </androidx.gridlayout.widget.GridLayout>

